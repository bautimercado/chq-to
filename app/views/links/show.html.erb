<div class="container mx-auto mt-8">
  <% if @error_message %>
    <p class="text-red-500 font-semibold mb-5"><%= @error_message %></p>
  <% end %>

  <div class="max-w-md mx-auto bg-white rounded-md overflow-hidden shadow-md">
    <% if notice.present? %>
      <p class="py-2 px-4 bg-green-50 text-green-500 font-medium rounded-t-md"><%= notice %></p>
    <% end %>

    <div class="p-6 space-y-4">
      <p class="text-gray-700 font-semibold">Original URL:</p>
      <p><%= @link.url %></p>

      <p class="text-gray-700 font-semibold">Short URL:</p>
      <p><%= redirect_to_original_url(@link.slug) %></p>

      <p class="text-gray-700 font-semibold">Type:</p>
      <p><%= @link.type %></p>

      <% if @link.name.present? %>
        <p class="text-gray-700 font-semibold">Name:</p>
        <p><%= @link.name %></p>
      <% end %>

      <% if @link.expiration_date.present? %>
        <p class="text-gray-700 font-semibold">Expiration date:</p>
        <p><%= @link.expiration_date %></p>
      <% end %>

      <% if @link.accessed.present? %>
        <p class="text-gray-700 font-semibold">Accessed:</p>
        <p><%= @link.accessed %></p>
      <% end %>
    </div>

    <div class="p-6 bg-gray-100">
      <%= link_to "Redirect", redirect_to_original_url(@link.slug), class: "block text-white bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded-full mb-2" %>

      <%= link_to "Edit", edit_link_path(@link), class: "block text-gray-700 hover:text-gray-900 py-2 px-4 rounded-full mb-2" %>

      <%= link_to "Access count per day", access_per_day_path(@link), class: "block text-gray-700 hover:text-gray-900 py-2 px-4 rounded-full mb-2" %>

      <%= link_to "Access details", access_details_path(@link), class: "block text-gray-700 hover:text-gray-900 py-2 px-4 rounded-full mb-2" %>

      <%= button_to "Destroy", link_path(@link), method: :delete, data: { confirm: "Are you sure?" }, class: "block text-white bg-red-500 hover:bg-red-600 py-2 px-4 rounded-full" %>
    </div>

    <div class="flex justify-end p-6">
      <%= link_to "Back to links", links_path, class: "text-gray-700 hover:text-gray-900" %>
    </div>
  </div>
</div>





