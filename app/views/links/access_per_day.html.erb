<div class="container mx-auto mt-8">
  <h1 class="text-4xl font-bold text-gray-800 mb-4">Access Count per Day</h1>

  <% if @access_counts.present? %>
    <ul class="list-disc ml-4">
      <% @access_counts.each do |date, count| %>
        <li class="text-gray-700 mb-2">
          <%= "Date: #{date}, Count: #{count}" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-700">No access counts available.</p>
  <% end %>

  <div class="text-center my-4 flex items-center -mx-1">
    <div class="mx-auto">
      <%= paginate @access_counts %>
    </div>
  </div>

  <%= link_to "Back", link_path(@link), class: "mt-4 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
</div>

