<div class="mx-auto md:w-2/3 w-full">
  <h1 class="text-4xl font-bold text-center mb-8">Edit Link</h1>

  <%= form_for(@link, as: :link, url: link_path(@link), method: :patch) do |f| %>
    <div class="mb-4">
      <%= f.label :url, class: "block text-gray-700 text-sm font-semibold mb-2" %>
      <%= f.text_field :url, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="mb-8">
      <%= f.label :name, class: "block text-gray-700 text-sm font-semibold mb-2" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="flex justify-center">
      <%= f.submit 'Update Link', class: "w-full bg-black text-white p-2 rounded-md hover:bg-gray-800 focus:outline-none focus:bg-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors duration-300" %>
    </div>


  <% end %>
  <%= link_to "Back", link_path(@link), class: "block mt-4 text-blue-500 hover:text-blue-700" %>
</div>

