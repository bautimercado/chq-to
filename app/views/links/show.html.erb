<div class="mx-auto md:w-2/3 w-full flex items-center justify-center">
  <% if @error_message %>
    <p class="text-red-500 font-semibold mb-5"><%= @error_message %></p>
  <% end %>

  <div class="w-full bg-white rounded-lg shadow-md p-8">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="text-gray-700">
      <p class="font-semibold mb-4">Original URL: <%= @link.url %></p>
      <p class="font-semibold mb-4">Short URL: <%= "#{Rails.application.routes.default_url_options[:host]}/l/#{@link.slug}" %></p>
      <p class="font-semibold mb-4">Type: <%= @link.type %></p>
      <% if @link.name.present? %>
        <p class="font-semibold mb-4">Name: <%= @link.name %></p>
      <% end %>
      <% if @link.expiration_date.present? %>
        <p class="font-semibold mb-4">Expiration date: <%= @link.expiration_date %></p>
      <% end %>
      <% if @link.accessed.present? %>
        <p class="font-semibold mb-4">Accessed: <%= @link.accessed %></p>
      <% end %>
    </div>

    <div class="flex justify-between items-center mt-8">
      <%= link_to "Redirect", redirect_to_original_url(@link.slug), class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_link_path(@link), class: "rounded-lg py-3 px-5 bg-gray-100 text-gray-800 font-medium" %>
        <%= button_to "Destroy", link_path(@link), method: :delete, data: { confirm: "Are you sure?" }, class: "rounded-lg py-3 px-5 bg-red-500 text-white font-medium" %>
        <%= link_to "Access count per day", access_per_day_path(@link) %>
      </div>
      <%= link_to "Back to links", links_path, class: "rounded-lg py-3 px-5 bg-gray-100 text-gray-800 font-medium" %>
    </div>
  </div>
</div>
