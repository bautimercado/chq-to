<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-md rounded-md">
  <h2 class="text-2xl font-bold mb-4">User Profile</h2>

  <div class="mb-4">
    <p class="text-gray-700"><strong>Email:</strong> <%= @user.email %></p>
    <p class="text-gray-700"><strong>User Name:</strong> <%= @user.username %></p>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Edit Account", edit_user_registration_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue active:bg-blue-800" %>

    <%= button_to "Delete Account", registration_path(current_user), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-red active:bg-red-800" %>
  </div>
</div>
