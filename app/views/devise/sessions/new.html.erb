<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-md shadow-md">
  <h2 class="text-2xl font-semibold mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-600 text-sm font-medium mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-b-2 border-gray-300 focus:outline-none focus:border-blue-500 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-600 text-sm font-medium mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border-b-2 border-gray-300 focus:outline-none focus:border-blue-500 py-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
      </div>
    <% end %>

    <div class="flex items-center">
      <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

